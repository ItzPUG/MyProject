<Window x:Class="ProjectQlyRap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectQlyRap"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>

            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <Menu>
                <MenuItem Header="Hệ Thống" Margin="1,0,5,0">
                    <MenuItem Name="mnDangNhap" Header="Đăng Nhập" Click="mnDangNhap_Click"></MenuItem>
                    <!--<MenuItem Name="mnDangKy" Header="Đăng Ký" Click="mnDangKy_Click"></MenuItem>-->
                    <MenuItem Header="Thoát"></MenuItem>
                </MenuItem>
                <MenuItem Header="Category" Margin="5,0,5,0">
                    <MenuItem Header="Vé"></MenuItem>
                    <MenuItem Header="Khách hàng"></MenuItem>
                    <MenuItem Header="Nhân Viên"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
        <ContentControl x:Name="CC" Grid.Column="0" Grid.Row="1"></ContentControl>
    </Grid>
</Window>
